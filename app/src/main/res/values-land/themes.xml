<resources>

    <style name="RecyclerItemTextViewStyle" parent="TitleStyle">
        <item name="android:drawablePadding">@dimen/small_distance</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/normal_distance</item>
        <item name="android:paddingVertical">@dimen/medium_distance</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:background">@drawable/panel</item>
    </style>


    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:paddingHorizontal">@dimen/normal_distance</item>
        <item name="android:paddingVertical">@dimen/normal_distance</item>
        <item name="android:background">@drawable/panel</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="drawableTint">@color/text</item>
        <item name="android:button">@drawable/radio_button_inset</item>
    </style>

    <style name="SwitchStyle" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/text</item>
        <item name="drawableTint">@color/text</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingVertical">@dimen/normal_distance</item>
        <item name="android:background">@drawable/panel</item>
        <item name="android:paddingHorizontal">@dimen/normal_distance</item>
    </style>

</resources>